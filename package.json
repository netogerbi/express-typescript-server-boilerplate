{
  "name": "expressjs-typescript-server",
  "version": "1.0.0",
  "description": "ExpressJS and Typescript server configuration boilerplate",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "start:dev": "ts-node-dev src/index.ts",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:functional": "jest --projects ./test --forceExit --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/netogerbi/express-typescript-server-boilerplate.git"
  },
  "keywords": [
    "Typescript",
    "ExpressJS",
    "Jest",
    "Supertest",
    "Lint",
    "Prettier",
    "ModuleAlias"
  ],
  "author": "NetoGerbi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/netogerbi/express-typescript-server-boilerplate/issues"
  },
  "homepage": "https://github.com/netogerbi/express-typescript-server-boilerplate#readme",
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.12",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.6.2",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.7.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-node-dev": "^1.0.0-pre.61",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2"
  }
}
